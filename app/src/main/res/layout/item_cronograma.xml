<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_classic_item"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <!-- Día y horario -->
    <TextView
    android:id="@+id/itemHorario"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lunes 18:00-22:00"
    android:textStyle="bold"
    android:textColor="#000000"
    android:textSize="14sp"
    android:layout_marginBottom="4dp" />

    <!-- Materia -->
    <TextView
    android:id="@+id/itemMateria"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Práctica Profesional II"
    android:textColor="#000000"
    android:textSize="16sp"
    android:layout_marginBottom="4dp" />

    <!-- Modo: punto de color + texto -->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

        <View
            android:id="@+id/itemModoIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_circle_indicator"
            />

        <TextView
            android:id="@+id/itemModo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presencial"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
